<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/grey" android:width="2dp"/>
            <corners android:radius="40dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/lightGrey" android:width="2dp"/>
            <stroke android:color="@color/veryLightBlue" android:width="2dp"/>
            <corners android:radius="40dp" />
        </shape>
    </item>
</selector>